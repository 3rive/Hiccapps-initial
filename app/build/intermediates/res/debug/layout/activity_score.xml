<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hicck.alphack.alphack.ScoreActivity"
    android:background="#ffffff"
    android:id="@+id/ScoreActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreImg"
        android:src="@drawable/score"
        android:contentDescription="score string"
        android:layout_above="@+id/restart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart"
        android:src="@drawable/startagain"
        android:layout_above="@+id/tw"
        android:layout_alignLeft="@+id/tw"
        android:layout_alignStart="@+id/tw"
        android:layout_marginBottom="75dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb"
        android:src="@drawable/fb"
        android:layout_alignTop="@+id/tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw"
        android:src="@drawable/tw"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/tw"
        android:layout_alignLeft="@+id/tw"
        android:layout_alignStart="@+id/tw"
        android:src="@drawable/tw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gp"
        android:src="@drawable/gp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="80dp"
        android:textColor="#ffb583ba"
        android:layout_above="@+id/scoreImg"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
